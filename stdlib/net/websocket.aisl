(module websocket
  
  (fn string_from_int n int -> string
    (set is_negative bool (lt n 0))
    (set abs_n int n)
    (if is_negative
      (set abs_n int (sub 0 n)))
    
    (set is_zero bool (eq abs_n 0))
    (if is_zero
      (ret "0"))
    
    (set digits array (array_new))
    (set remaining int abs_n)
    
    (while (gt remaining 0)
      (set digit int (mod remaining 10))
      (set remaining int (div remaining 10))
      
      (set digit_char string "0")
      (if (eq digit 1) (set digit_char string "1"))
      (if (eq digit 2) (set digit_char string "2"))
      (if (eq digit 3) (set digit_char string "3"))
      (if (eq digit 4) (set digit_char string "4"))
      (if (eq digit 5) (set digit_char string "5"))
      (if (eq digit 6) (set digit_char string "6"))
      (if (eq digit 7) (set digit_char string "7"))
      (if (eq digit 8) (set digit_char string "8"))
      (if (eq digit 9) (set digit_char string "9"))
      
      (array_push digits digit_char))
    
    (set result string "")
    (set len int (array_length digits))
    (set i int (sub len 1))
    
    (while (ge i 0)
      (set digit_str string (array_get digits i))
      (set result string (string_concat result digit_str))
      (set i int (sub i 1)))
    
    (if is_negative
      (set result string (string_concat "-" result)))
    
    (ret result))
  
  (fn parse_ws_url url string -> array
    (set arr array (array_new))
    
    (set is_wss bool (string_equals (string_slice url 0 6) "wss://"))
    (set is_ws bool (string_equals (string_slice url 0 5) "ws://"))
    
    (if is_wss
      (array_push arr "wss")
      (array_push arr "ws"))
    
    (set url_no_proto string url)
    (if is_wss
      (set url_no_proto string (string_slice url 6 (string_length url))))
    (if is_ws
      (set url_no_proto string (string_slice url 5 (string_length url))))
    
    (set slash_pos int -1)
    (set i int 0)
    (set url_len int (string_length url_no_proto))
    (while (lt i url_len)
      (set ch string (string_slice url_no_proto i (add i 1)))
      (set is_slash bool (string_equals ch "/"))
      (if is_slash
        (set slash_pos int i)
        (break))
      (set i int (add i 1)))
    
    (set host string url_no_proto)
    (set path string "/")
    (if (ge slash_pos 0)
      (set host string (string_slice url_no_proto 0 slash_pos))
      (set path string (string_slice url_no_proto slash_pos url_len)))
    
    (array_push arr host)
    
    (set port int 80)
    (if is_wss
      (set port int 443))
    (array_push arr port)
    
    (array_push arr path)
    (ret arr))
  
  (fn build_handshake host string path string -> string
    (set req string "GET ")
    (set req string (string_concat req path))
    (set req string (string_concat req " HTTP/1.1\r\n"))
    (set req string (string_concat req "Host: "))
    (set req string (string_concat req host))
    (set req string (string_concat req "\r\n"))
    (set req string (string_concat req "Upgrade: websocket\r\n"))
    (set req string (string_concat req "Connection: Upgrade\r\n"))
    (set req string (string_concat req "Sec-WebSocket-Key: dGhlIHNhbXBsZSBub25jZQ==\r\n"))
    (set req string (string_concat req "Sec-WebSocket-Version: 13\r\n\r\n"))
    (ret req))
  
  (fn encode_frame message string -> string
    (set msg_len int (string_length message))
    
    (set frame string "\x81")
    
    (set masked_len int (add msg_len 128))
    (set len_byte string "")
    
    (if (lt msg_len 126)
      (set len_byte string (string_slice "                                                                                                                                " masked_len (add masked_len 1))))
    
    (set frame string (string_concat frame len_byte))
    
    (set mask string "\x00\x00\x00\x00")
    (set frame string (string_concat frame mask))
    (set frame string (string_concat frame message))
    
    (ret frame))
  
  (fn connect url string -> string
    (set parts array (parse_ws_url url))
    (set protocol string (array_get parts 0))
    (set host string (array_get parts 1))
    (set port int (array_get parts 2))
    (set path string (array_get parts 3))
    
    (set is_wss bool (string_equals protocol "wss"))
    (set socket string "")
    (if is_wss
      (set socket string (tcp_tls_connect host port))
      (set socket string (tcp_connect host port)))
    
    (set handshake string (build_handshake host path))
    (tcp_send socket handshake)
    
    (set response string (tcp_receive socket 4096))
    
    (ret socket))
  
  (fn send ws string message string -> bool
    (set frame string (encode_frame message))
    (tcp_send ws frame)
    (ret true))
  
  (fn receive ws string -> string
    (set data string (tcp_receive ws 4096))
    
    (set data_len int (string_length data))
    (if (lt data_len 2)
      (ret ""))
    
    (set payload_start int 2)
    (set masked bool (ge (string_length (string_slice data 1 2)) 128))
    (if masked
      (set payload_start int (add payload_start 4)))
    
    (if (lt data_len payload_start)
      (ret ""))
    
    (set payload string (string_slice data payload_start data_len))
    (ret payload))
  
  (fn close ws string -> int
    (tcp_close ws)
    (ret 0))
  
  (meta-note "Pure AISL WebSocket client using TCP/TLS primitives - simplified implementation without full RFC 6455 compliance"))
